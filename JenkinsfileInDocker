pipeline {
  agent none
  stages {
    stage('Build') {
      parallel {
        stage('Compile') {
          agent {
            docker { image 'maven:alpine'}
          }
          steps {
            sh 'mvn compile'
          }
        }
      }
    }
    stage('Test') {
      parallel {
        stage('Unit Tests') {
          agent {
            docker { image 'maven:alpine'}
          }
          steps {
            sh 'mvn test'
          }
        }
      }
    }
    stage('Package') {
      parallel {
        stage('Create Jarfile') {
          agent {
            docker { image 'maven:alpine'}
          }
          steps {
            sh 'mvn package -DskipTests'
          }
        }
      }
    }

    stage('Deploy to Dev') {
      steps {
        // TODO
        sh "echo done"
      }
    }
  }
}
