pipeline {
  agent none

  environment {
        // 指定 Maven Docker 映像
        MAVEN_DOCKER_IMAGE = 'maven:alpine'
    }

  stages {
    stage('Build') {
      parallel {
        stage('Compile') {
          steps {
            script {
              docker.image(MAVEN_DOCKER_IMAGE).inside {
                sh 'mvn compile'
              }
            }
          }
        }
      }
    }
    stage('Test') {
      parallel {
        stage('Unit Tests') {
          steps {
            script {
              docker.image(MAVEN_DOCKER_IMAGE).inside {
                sh 'mvn test'
              }
            }
            
          }
        }
      }
    }
    stage('Package') {
      parallel {
        stage('Create Jarfile') {
          steps {
            script {
              docker.image(MAVEN_DOCKER_IMAGE).inside {
                sh 'mvn package -DskipTests'
              }
            }
          }
        }
      }
    }

    stage('Deploy to Dev') {
      steps {
        // TODO
        sh "echo done"
      }
    }
  }
}
